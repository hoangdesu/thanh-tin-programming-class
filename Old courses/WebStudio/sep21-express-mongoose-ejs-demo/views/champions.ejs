<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Champions</title>
</head>
<body>
    <div>
        <h1>Add a new champion form</h1>
        <!-- - form action: địa chỉ để gửi thông tin form -->
        <!-- - method: phải dùng POST -->
        <form action="/champions" method="post">
            <label for="">Name</label>
            <input type="text" name="championName"> 
            
            <label for="">Role</label>
            <input type="text" name="role">

            <label for="">Image</label>
            <input type="text" name="imageUrl">

            <button>Create</button>
        </form>

        <!-- name sẽ dc dùng làm key để có thể lấy value từ server -->
        <!-- phải dùng name attribute trong input -->

    </div>

    <div>
        <h1>All Champions from database</h1>

        <table border="1">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Role</th>
                <th>Image</th>
            </tr>
            <% championList.forEach(champion => { %>
                <tr>
                    <td><%= champion._id %></td>
                    <td><%= champion.name %></td>
                    <td><%= champion.role %></td>
                    <td><img src="<%= champion.image %>" alt="<%= champion.name %>" width="300"></td>
                </tr>
            <% }) %>
        </table>
    </div>
</body>
</html>

