<!DOCTYPE html>
<html lang="en">

<!-- include head partial here -->
<%- include('partials/head') %>

<body class="container" >
  <div>

    <!-- header -->
    <%- include('partials/header') %>

    <!-- Main content -->
    <main class="d-flex gap-4">
      <!-- Your profile here -->
      <aside id="profile" class="bg-primary text-white p-3">
        <div>
          <img src="images/profile.jpg" height="250" alt="PROFILE PICTUREEEEE" class="rounded-circle">
        </div>
        <div>
          <div>
            <span>Hi, I'm</span>
            <h1>Brian</h1>
          </div>
          <div class="fst-italic">
            <p>s3697305</p>
            <p>hoangdesu@gmail.com</p>
          </div>
        </div>
      </aside>

      <!-- Your meal plan here -->
      <section id="meal-plan" class="w-100">
        <div class="text-end mb-4">
          <h1>My <b><%= plan.name %> </b></h1>
          <form action="/" method="post">
            <button class="btn btn-primary px-4 mt-2" id="refresh-button">Refresh</button>
          </form>
        </div>

        <!-- Your meal list here -->
        <div id="meal-list">
          <!-- meal 1: top row -->
          <div class="row">
            <div class="col">
              <a href="/meal/<%= plan.meals[0].name %> ">
                <img src="<%= plan.meals[0].imageUrl %>" height="300" class="w-100 mb-2">
                <section>
                  <h3>
                    <%= plan.meals[0].name %>
                  </h3>
                  <span>
                    <%= plan.meals[0].timeOfDay %> - <%= plan.meals[0].mealType %>
                  </span>
                </section>
              </a>
            </div>
          </div>

          <!-- meal 2: 2nd row -->
          <div class="row mt-5">
            <div class="col">
              <a href="/meal/#">
                <img src="https://picsum.photos/id/63/200/300" height="150"  class="w-100">
                <section>
                  <h3>
                    Meal Name
                  </h3>
                  <span>
                    Time of Day - Meal Type
                  </span>
                </section>
              </a>
            </div>

            <!-- meal 3: 2nd row -->
            <div class="col">
              <a href="/meal/#">
                <img src="https://picsum.photos/id/63/200/300" height="150" alt="Meal image"  class="w-100">
                <section>
                  <h3>
                    Meal Name
                  </h3>
                  <span>
                    Time of Day - Meal Type
                  </span>
                </section>
              </a>
            </div>
          </div>

          
        </div>
      </section>
    </main>
  </div>

  <%- include('partials/foot') %>
  <script src="/scripts/index.js"></script>

</body>

</html>