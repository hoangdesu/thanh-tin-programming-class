  <!-- The profile itself -->
  <% if(typeof message !="undefined" && message) { %>
    <div class="error-container d-flex justify-content-center">
      <div class="mt-0 message position-absolute w-50 " id="errorMessage">
        <div class="alert alert-danger alert-dismissible" role="alert">
          <div>
            <%= message %>
          </div>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      </div>
    </div>
    <%}%>
      <div class="col-12 col-lg-10 text1 box d-flex justify-content-center">
        <div class="col-md-2 d-none d-lg-flex flex-column align-items-start"></div>
        <div class="col-lg-8 col-12 d-lg-flex flex-column border border-white p-3 p-0">
          <!-- img-username-mini desc container -->
          <div class="container-fluid d-lg-flex d-sm-block flex-lg-row">



            <!-- Profile editor modal -->
            <div class="modal fade" id="postFormModal" tabindex="-1" aria-labelledby="postFormModalLabel"
              aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content the-2nd-color">
                  <div class="modal-header">
                    <h5 class="modal-title text1" id="exampleModalLabel">Profile editor</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                    <!-- Profile image edit forms -->
                    <form action="/profilePic-edit" method="post" id="pfp-form" enctype="multipart/form-data">
                      <div class="userImg">
                        <div class="container-fluid d-flex mx-auto justify-content-center">
                          <input name="image" type="file" id="file" class="file" accept="jpeg, jpg, png">
                          <label for="file" class="uploadbtn" id="uploadbtn">
                            <img src="<%=user.photo%>" id="photo" class="photo">
                          </label>
                        </div>
                      </div>
                    </form>
                    <!-- profile text edit form -->
                    <form action="/profile/edit" method="post" id="userForm">
                      <label for="name" class="">User name</label><br>
                      <input type="text" name="name" id="name" value="<%= user.name %>"><br>
                      <label for="status" class="">Status</label><br>
                      <input type="text" name="status" id="status" value="<%= user.status %>"><br>
                      <label for="description" class="">Description</label><br>
                      <textarea type="textbox" name="description" id="description" class="w-100" maxlength="100"><%= user.description %></textarea><br>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary" form="userForm">Save changes</button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
            <!-- flex container for centering profile pic in sm and below-->
            <div class="d-flex justify-content-center">
              <a href=" <%= (user.name === sessionUser.name) ? '' : '' %>">
                <%if(!user.photo){ %>
                  <img src="/images/neco-arc.png" id="pfp" alt="User's profile picture">
                  <%} else { %>
                    <img src="<%= (user.name === sessionUser.name) ? sessionUser.photo : user.photo %>" id="pfp"
                      alt="User's profile picture">
                    <%} %>
              </a>
            </div>
            <!-- user name and mini desc container -->
            <div class="container-fluid d-flex flex-column w-50 w-100">
              <div class="m-2 fs-1 d-flex j font-secondary">
                <% if(user.name===sessionUser.name){ %>
                  <%= sessionUser.name %>
                    <%= sessionUser.isArchived ? 'ðŸ”’' : '' %>
                      <%} else {%>
                        <%= user.name %>
                          <%= user.isArchived ? 'ðŸ”’' : '' %>
                            <% } %>
                              <% if(user.name===sessionUser.name){ %>
                                <div class="btn-group">
                                  <button type="button"
                                    class="btn btn-custom the-2nd-color dropdown-toggle btn-dropdown mt-2"
                                    data-bs-toggle="dropdown" data-bs-display="static" aria-expanded="false">
                                  </button>
                                  <ul class="dropdown-menu dropdown-menu-lg-end the-4th-colorr roboto">
                                    <!-- <li><a href="/profile_editor" class="dropdown-item">Profile editor</a></li> -->
                                    <!-- Button trigger modal -->
                                    <li><button type="button" class="btn btn-primary dropdown-item"
                                        data-bs-toggle="modal" data-bs-target="#postFormModal">Profile editor</button>
                                    </li>
                                    <%if(sessionUser.isAdmin){%>
                                      <li><a href="/adminUI" class="dropdown-item">AdminUI</a></li>
                                      <% } %>
                                        <% if(sessionUser.isArchived){ %>
                                          <li>
                                            <form action="/user/unArchive" method="post"><button type="submit"
                                                class="dropdown-item">UnarchiveðŸ”“</button></form>
                                          </li>
                                          <% } else { %>
                                            <li>
                                              <form action="/user/archive" method="post"><button type="submit"
                                                  class="dropdown-item">ArchiveðŸ”’</button></form>
                                            </li>
                                            <%}%>
                                  </ul>
                                </div>
                                <%}%>
              </div>

              <div class="text-wrap mx-2">
                Status:<br>
                <%= user.name===sessionUser.name ? sessionUser.status : user.status %>
              </div>
            </div>
          </div>
          <!-- "about" and main desc container -->
          <div class="container-fluid">
            <h1 class="m-3">Description</h1>
            <% if (user.isLocked){ %>
              <div class="mx-3">This account has been locked</div>
              <% } if (user.isArchived) { %>
                <div class="mx-3">This account has been archived</div>
           <% } else { %>
            <div class="mx-3">
              <%= user.name===sessionUser.name ? sessionUser.description : user.description %>
            </div>
            <% } %>
           
          </div>
        </div>


      </div>
      </div>


